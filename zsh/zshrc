# Editors
export EDITOR="e"

# Extended globbing is really fun
setopt extendedglob

# But only with Vim bindings
bindkey -v

# But I still want incremental backwards search
bindkey "^R" history-incremental-pattern-search-backward

# I really, really dislike interrupts
unsetopt beep
unsetopt hist_beep
unsetopt list_beep

# History
export HISTFILE=$HOME/.zsh_history
export HISTSIZE=100000
export SAVEHIST=100000
setopt EXTENDED_HISTORY
setopt INC_APPEND_HISTORY_TIME

# Set up java
export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_131.jdk/Contents/Home

# Adjust path
export PATH=/Users/knl/bin:$PATH
export PATH=/Users/knl/.cargo/bin:$PATH

# Enable colours
autoload -U colors && colors

# Nicer prompts
PROMPT="%(0?..%F{088}└─ %f%F{160}%? %f
)%F{088}┌─ %f%F{249}%D{%H.%M.%S}%f%F{088} ─ %f%F{249}%~ %f%F{088}─%f
%F{088}┕ %f "

# Load aliases
test -f ~/.aliases && . ~/.aliases

# Nicer tab completion
zstyle ':completion:*' menu select

# Load laptop specific settings
test -f ~/.localzshrc && . ~/.localzshrc

# Helper functions
scan() {
    grep -i $1 -r .
}

# Completions
fpath+=~/.zfunc

autoload -Uz compinit
compinit -i

# Racer
export RUST_SRC_PATH="$(rustc --print sysroot)/lib/rustlib/src/rust/src"
